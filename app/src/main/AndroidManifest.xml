        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetCalculMental">
        <activity
            android:name=".view.MainEcranJeu"
            android:exported="false"/>
        <activity
            android:name=".view.MainAPropos"
            android:exported="false"/>
        <activity
            android:name=".view.MainScore"
            android:exported="false"/>

        <activity
            android:name=".view.MainAccueil"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>